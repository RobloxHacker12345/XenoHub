local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local football = workspace:WaitForChild("Football")


local function throwFootballToPlayer(targetPlayer, power)
    local qbPosition = football.Position
    local targetPosition = targetPlayer.Character.HumanoidRootPart.Position
    local direction = (targetPosition - qbPosition).unit
    local force = direction * power

    football:SetNetworkOwner(targetPlayer)  
    football:ApplyImpulse(force)
end

local function findClosestTeammate()
    local localPlayer = Players.LocalPlayer
    local closestDistance = math.huge
    local targetPlayer = nil

    for _, teammate in pairs(Players:GetPlayers()) do
        if teammate ~= localPlayer and teammate.Team == localPlayer.Team then
            local distance = (teammate.Character.HumanoidRootPart.Position - football.Position).magnitude
            if distance < closestDistance then
                closestDistance = distance
                targetPlayer = teammate
            end
        end
    end

    return targetPlayer
end


local function aimbotThrow()
    local targetPlayer = findClosestTeammate()
    if targetPlayer then
        -- Adjust the power range from 5 to 95 as needed
        local power = math.random(5, 95)
        throwFootballToPlayer(targetPlayer, power)
    end
end


local aimbotButton = script.Parent  

aimbotButton.TouchTap:Connect(function()
    aimbotThrow()
end)
