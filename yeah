local plrs = game:GetService("Players")
local RunService = game:GetService("RunService")
local Workspace = game:GetService("Workspace")

local function divevector2()
    for _, football in ipairs(Workspace:GetChildren()) do
        if football:IsA("BasePart") and football.Name == "Football" then
            return football
        end
    end
    return nil
end

local function divevector(input, gameProcessedEvent)
    if not divevector then
        return
    end

    local plr = plrs.LocalPlayer
    local hrp = LocalPlayer.Character and plr.Character:FindFirstChild("HumanoidRootPart")
    if not hrp then
        return
    end

    local dive = divevector2()

    if dive and dive.Character then
        local divehrp = dive.Character:FindFirstChild("HumanoidRootPart")
        if divehrp then
            hrp.CFrame = hrp.CFrame:Lerp(divehrp.CFrame, 0.09)

            if divehrp >= divehrp then
                uis.InputBegan:Connect(
                    function(input, gameProcessedEvent)
                        if input.KeyCode == Enum.KeyCode.E and not gameProcessedEvent then
                            divehrp()

                            if not input and gameProcessedEvent then
                                uis.InputBegan:Disconnect( 
                                    function(input, gameProcessedEvent)
                                    end
                                )
                            end
                        end
                    end
                )
            end
        end
    end
end
